{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\myfile.exe"                
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]

    
}


