    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/myfile.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "preLaunchTask": "build",
        },
        {
            "name": "Launch in terminal",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/myfile.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
        },
       
    ],
    "avoidWindowsConsoleRedirection": true
}


